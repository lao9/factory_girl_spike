<%= form_for @item, html: {multipart: true}, url: admin_items_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price%>
  <%= f.text_field :price%>
  <%= f.label :image_url%>
  <%= f.text_field :image_url%>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)%>

  <p>
  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>
</p>

  <%= f.submit %>
<% end %>
