<h1>Create a New Item</h1>

<%= form_for @item, html: {multipart: true, class: 'well'}, url: admin_items_path do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price%>
    $<%= f.number_field :price, min: 0, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %>
  </div>

  <div class="row">
    <div class="col-md-4 checkbox-list">
      <h4>Select Item Category:</h4>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)%>
    </div>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image, class: 'form-control'%>
  </div>

  <%= f.submit "Create Item", class: 'btn btn-primary'%>
<% end %>
